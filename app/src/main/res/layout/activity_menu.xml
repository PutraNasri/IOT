<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="es.esy.kinketkuena.iot.Menu">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/frameLayout6"
        android:background="#5e5a5a"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:id="@+id/imageButton6"
            android:layout_gravity="center"
            android:background="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12 Mai 2016 "
            android:id="@+id/textView20"
            android:layout_gravity="left|bottom"
            android:textColor="#ffffffff"
            android:autoText="false"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="09:30 AM"
            android:id="@+id/textView21"
            android:layout_gravity="right|bottom"
            android:textColor="#ffffffff"
            android:layout_marginRight="5dp" />
    </FrameLayout>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/frameLayout6"
        android:layout_alignStart="@+id/frameLayout6" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Proses"
        android:id="@+id/button"
        android:layout_below="@+id/spinner"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner"
        android:onClick="proses" />
</RelativeLayout>
