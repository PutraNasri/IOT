<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="es.esy.kinketkuena.iot.Menu_awal">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:background="#5e5a5a">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:id="@+id/imageButton"
            android:layout_gravity="center"
            android:background="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12 Mai 2016 "
            android:id="@+id/textView2"
            android:layout_gravity="left|bottom"
            android:textColor="#ffffffff"
            android:autoText="false"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="09:30 AM"
            android:id="@+id/textView3"
            android:layout_gravity="right|bottom"
            android:textColor="#ffffffff"
            android:layout_marginRight="5dp" />

    </FrameLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/frameLayout">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0b0b0b">

            <FrameLayout
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:id="@+id/frameLayout2"
                android:background="#eee9e9"
                android:layout_gravity="left|center_vertical"
                android:layout_below="@+id/frameLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:onClick="food">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton2"
                    android:layout_gravity="center"
                    android:background="@drawable/food"
                    android:onClick="food" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Food"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:id="@+id/textView4"
                    android:layout_gravity="left|top"
                    android:textSize="30dp"
                    android:textColor="#55d638"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="07:30 AM"
                    android:id="@+id/textView5"
                    android:layout_gravity="left|bottom"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="12 Mai 2016"
                    android:id="@+id/textView6"
                    android:layout_gravity="right|bottom"
                    android:textColor="#000000"
                    android:layout_marginRight="5dp" />

            </FrameLayout>

            <FrameLayout
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:background="#eee9e9"
        android:id="@+id/frameLayout5"
                android:layout_gravity="right|top"
                android:layout_below="@+id/frameLayout"
                android:layout_alignLeft="@+id/frameLayout3"
                android:layout_alignStart="@+id/frameLayout3"
                android:layout_marginTop="2dp"
                android:onClick="temp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton3"
            android:layout_gravity="center"
            android:background="@drawable/suhu"
            android:onClick="temp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20c"
            android:id="@+id/textView7"
            android:layout_gravity="left|top"
            android:textSize="30dp"
            android:textColor="#55d638"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Temperature"
            android:id="@+id/textView8"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="07:30 AM"
            android:id="@+id/textView9"
            android:layout_gravity="left|bottom"
            android:textColor="#000000"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="12 Mai 2016"
            android:id="@+id/textView10"
            android:layout_gravity="right|bottom"
            android:textColor="#000000"
            android:layout_marginRight="5dp" />
        </FrameLayout>

            <FrameLayout
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="#eee9e9"
                android:id="@+id/frameLayout4"

                android:layout_gravity="left|top"
                android:layout_alignTop="@+id/frameLayout3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton4"
                    android:layout_gravity="center"
                    android:background="@drawable/drinking" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Drinking Water"
                    android:id="@+id/textView11"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:id="@+id/textView12"
                    android:layout_gravity="left|top"
                    android:textSize="30dp"
                    android:textColor="#55d638"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="07:30 AM"
                    android:id="@+id/textView13"
                    android:layout_gravity="left|bottom"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="12 Mai 2016"
                    android:id="@+id/textView14"
                    android:layout_gravity="right|bottom"
                    android:textColor="#000000"
                    android:layout_marginRight="5dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="180dp"
                android:layout_height="150dp"

                android:background="#eee9e9"
                android:id="@+id/frameLayout3"

                android:layout_alignRight="@+id/frameLayout"
                android:layout_alignEnd="@+id/frameLayout"
                android:layout_marginTop="2dp"
                android:layout_gravity="right|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hygiene"
                    android:id="@+id/textView15"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good"
                    android:id="@+id/textView16"
                    android:layout_gravity="left|top"
                    android:textSize="30dp"
                    android:textColor="#55d638"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton5"
                    android:layout_gravity="center"
                    android:background="@drawable/amonia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="07:30 AM"
                    android:id="@+id/textView17"
                    android:layout_gravity="left|bottom"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="12 Mai 2016"
                    android:id="@+id/textView18"
                    android:layout_gravity="right|bottom"
                    android:textColor="#000000"
                    android:layout_marginRight="5dp" />
            </FrameLayout>
        </TableLayout>
    </ScrollView>


</RelativeLayout>
